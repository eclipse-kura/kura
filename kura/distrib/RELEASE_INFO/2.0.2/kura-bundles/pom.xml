<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
  
    <parent>
		<groupId>org.eclipse.kura</groupId>
		<artifactId>target-platform-previous</artifactId>
		<version>2.0.2</version>
	</parent>

 	<groupId>org.eclipse.kura</groupId>
	<artifactId>kura-bundles</artifactId>
	<version>1.0.0</version>
	<packaging>pom</packaging>

	<build>
      <plugins>
         <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>properties-maven-plugin</artifactId>
            <version>1.0-alpha-2</version>
            <executions>
               <execution>
                  <phase>initialize</phase>
                  <goals>
                     <goal>read-project-properties</goal>
                  </goals>
                  <configuration>
                     <files>
                        <file>${basedir}/../config/kura.build.properties</file>
                     </files>
                  </configuration>
               </execution>
            </executions>
         </plugin>
			<plugin>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<id>copy-kura-bundles</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>copy</goal>
						</goals>
						<configuration>
							<artifactItems>					
								<!-- copied from local repository or Eclipse release repository-->
								


                                <artifactItem>
                                    <groupId>org.eclipse.kura</groupId>
                                    <artifactId>org.eclipse.kura.api</artifactId>
                                    <version>1.0.9</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.eclipse.kura</groupId>
                                    <artifactId>org.eclipse.kura.core</artifactId>
                                    <version>1.0.9</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.eclipse.kura</groupId>
                                    <artifactId>org.eclipse.kura.core.certificates</artifactId>
                                    <version>1.0.2</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.eclipse.kura</groupId>
                                    <artifactId>org.eclipse.kura.core.cloud</artifactId>
                                    <version>1.0.8</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.eclipse.kura</groupId>
                                    <artifactId>org.eclipse.kura.core.comm</artifactId>
                                    <version>1.0.2</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.eclipse.kura</groupId>
                                    <artifactId>org.eclipse.kura.core.configuration</artifactId>
                                    <version>1.0.8</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.eclipse.kura</groupId>
                                    <artifactId>org.eclipse.kura.core.crypto</artifactId>
                                    <version>1.0.4</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.eclipse.kura</groupId>
                                    <artifactId>org.eclipse.kura.deployment.agent</artifactId>
                                    <version>1.0.6</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.eclipse.kura</groupId>
                                    <artifactId>org.eclipse.kura.core.deployment</artifactId>
                                    <version>1.1.1</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.eclipse.kura</groupId>
                                    <artifactId>org.eclipse.kura.camel</artifactId>
                                    <version>1.0.1</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.eclipse.kura</groupId>
                                    <artifactId>org.eclipse.kura.core.log</artifactId>
                                    <version>1.0.1</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.eclipse.kura</groupId>
                                    <artifactId>org.eclipse.kura.core.net</artifactId>
                                    <version>1.0.9</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.eclipse.kura</groupId>
                                    <artifactId>org.eclipse.kura.core.status</artifactId>
                                    <version>1.0.1</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.eclipse.kura</groupId>
                                    <artifactId>org.eclipse.kura.deployment.customizer</artifactId>
                                    <version>1.0.4</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.eclipse.kura</groupId>
                                    <artifactId>org.eclipse.kura.deployment.customizer.upgrade</artifactId>
                                    <version>1.0.3</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.eclipse.kura</groupId>
                                    <artifactId>org.eclipse.kura.deployment.update</artifactId>
                                    <version>1.0.2</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.eclipse.kura</groupId>
                                    <artifactId>org.eclipse.kura.linux.clock</artifactId>
                                    <version>1.0.6</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.eclipse.kura</groupId>
                                    <artifactId>org.eclipse.kura.linux.command</artifactId>
                                    <version>1.0.4</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.eclipse.kura</groupId>
                                    <artifactId>org.eclipse.kura.linux.net</artifactId>
                                    <version>1.0.11</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.eclipse.kura</groupId>
                                    <artifactId>org.eclipse.kura.linux.position</artifactId>
                                    <version>1.0.6</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.eclipse.kura</groupId>
                                    <artifactId>org.eclipse.kura.linux.usb</artifactId>
                                    <version>1.0.7</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.eclipse.kura</groupId>
                                    <artifactId>org.eclipse.kura.linux.bluetooth</artifactId>
                                    <version>1.0.6</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.eclipse.kura</groupId>
                                    <artifactId>org.eclipse.kura.linux.watchdog</artifactId>
                                    <version>1.0.5</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.eclipse.kura</groupId>
                                    <artifactId>org.eclipse.kura.linux.gpio</artifactId>
                                    <version>1.0.1</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.eclipse.kura</groupId>
                                    <artifactId>org.eclipse.kura.net.admin</artifactId>
                                    <version>1.0.11</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.eclipse.kura</groupId>
                                    <artifactId>org.eclipse.kura.raspberrypi.sensehat</artifactId>
                                    <version>1.0.0</version>
                                </artifactItem>
                          </artifactItems>
                            <stripVersion>true</stripVersion>
                            <outputDirectory>${project.basedir}/target/source/plugins</outputDirectory>
                      </configuration>
                  </execution>
                </executions>
             </plugin>
        </plugins>
     </build>
</project>
