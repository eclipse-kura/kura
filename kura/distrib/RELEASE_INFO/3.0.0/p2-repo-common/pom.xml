									<artifactId>com.codeminders.hidapi.x86_64</artifactId>
									<version>${com.codeminders.hidapi.version}</version>
								</artifactItem>
								<artifactItem>
									<groupId>org.apache</groupId>
									<artifactId>org.apache.commons.net</artifactId>
