	-console 5002 \
	-consoleLog >> /var/log/kura-console.log 2>> /var/log/kura-console.log &amp;

    #Save the PID
    KURA_PID=$!
    echo "Kura Started (pid="$KURA_PID") ..." >> /var/log/kura-console.log
