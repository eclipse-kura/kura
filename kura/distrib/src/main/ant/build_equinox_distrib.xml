cp ${DIR}/kura/config.ini /tmp/.kura/configuration/

KURA_RUNNING=`ps ax | grep java | grep "org.eclipse.osgi"`

if [ ! -z "$KURA_RUNNING" ] ; then
  nohup java -Xms${kura.mem.size} -Xmx${kura.mem.size} -XX:MaxPermSize=64m -Xss128k \
