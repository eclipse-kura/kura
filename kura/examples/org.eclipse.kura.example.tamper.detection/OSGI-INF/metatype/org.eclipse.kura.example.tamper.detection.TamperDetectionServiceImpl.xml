<MetaData xmlns="http://www.osgi.org/xmlns/metatype/v1.2.0" localization="en_us">
    <OCD id="org.eclipse.kura.example.tamper.detection.TamperDetectionServiceImpl"
         name="Tamper Detection"
         description="This service emulates a TamperDetectionService.">

		<AD id="is.enabled"
            name="Enabled"
            type="Boolean"
            cardinality="0"
            required="true"
            default="true"
            description="Specifies if the tamper detection service is enabled or not.">
        </AD>

        <AD id="tampered"
            name="Device Tamper Status"
            type="Boolean"
            cardinality="0"
            required="true"
            default="false"
            description="Specifies the current device status. If set to true to simulates a device tamper event, if set to false clears the tamper status.">
        </AD>
        
    </OCD>

    <Designate factoryPid="org.eclipse.kura.example.tamper.detection.TamperDetectionServiceImpl">
        <Object ocdref="org.eclipse.kura.example.tamper.detection.TamperDetectionServiceImpl"/>
    </Designate>
</MetaData>
