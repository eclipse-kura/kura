<MetaData xmlns="http://www.osgi.org/xmlns/metatype/v1.2.0" localization="en_us">
    <OCD id="org.eclipse.kura.wire.devel.framegrabber.FrameGrabber" 
         name="Delay" 
         description="A wire component that do something cool.">

         <AD id="enable.acquisition"
            name="enable.acquisition"
            type="Boolean"
            cardinality="0"
            required="true"
            default="false"
            description="Enable the acquisition."/>
            
        <AD id="frame.rate"
            name="Frame Rate"
            type="Integer"
            cardinality="0"
            required="true"
            default="1"
            min="1"
            description="Frame Rate."/>

        <AD id="native.frame.rate"
            name="Native Frame Rate"
            type="Integer"
            cardinality="0"
            required="true"
            default="1"
            min="1"
            description="Native Frame Rate."/>
            
        <AD id="width"
            name="Width"
            type="Integer"
            cardinality="0"
            required="true"
            default="640"
            min="1"
            description="Width"/>
            
        <AD id="height"
            name="Height"
            type="Integer"
            cardinality="0"
            required="true"
            default="480"
            min="1"
            description="Height"/>
            
        <AD id="acquisition.mode"
            name="Mode of acquisition"
            type="String"
            cardinality="0"
            required="true"
            default="polling"
            description="The mode of frame acqusition.">
           <Option label="polling" value="polling"/>
           <Option label="listen" value="listen"/>
        </AD>
        
    </OCD>
    
    <Designate pid="org.eclipse.kura.wire.devel.framegrabber.FrameGrabber" factoryPid="org.eclipse.kura.wire.devel.framegrabber.FrameGrabber">
        <Object ocdref="org.eclipse.kura.wire.devel.framegrabber.FrameGrabber"/>
    </Designate>
</MetaData>
