<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0" immediate="false" name="org.eclipse.kura.system.ExtendedPropertiesService">
   <implementation class="org.eclipse.kura.core.extendedproperties.ExtendedPropertiesServiceImpl"/>
   <service>
      <provide interface="org.eclipse.kura.system.ExtendedPropertiesService"/>
   </service>
   <property name="service.pid" value="org.eclipse.kura.system.ExtendedPropertiesService"/>
   <reference name="EventAdmin"
              cardinality="1..1"
              policy="static"
              bind="setEventAdmin"
              unbind="unsetEventAdmin"
              interface="org.osgi.service.event.EventAdmin"/>
   <reference name="ExtendedPropertiesHolder"
              interface="org.eclipse.kura.system.ExtendedPropertiesHolder"
              bind="addExtendedPropertiesHolder"
              unbind="removeExtendedPropertiesHolder"
              cardinality="0..n"
              policy="dynamic"/>
</scr:component>
