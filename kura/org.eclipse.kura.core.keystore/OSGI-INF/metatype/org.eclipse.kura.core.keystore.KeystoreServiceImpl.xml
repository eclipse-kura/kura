<MetaData xmlns="http://www.osgi.org/xmlns/metatype/v1.2.0" localization="en_us">
    <OCD id="org.eclipse.kura.core.keystore.KeystoreServiceImpl" 
         name="KeystoreServiceImpl" 
         description="KeystoreServiceImpl">

        <AD id="keystore.path"
            name="Keystore Path"
            type="String"
            cardinality="0"
            required="true"
            default="/tmp"
            description="The keystore path">
        </AD>
        
        <AD id="keystore.password"
            name="Keystore Password"
            type="Password"
            cardinality="0"
            required="false"
            default="changeit"
            description="The Keystore Password">
        </AD>
        
        <AD id="randomize.password"
            name="Randomize Password"
            type="Boolean"
            cardinality="0"
            required="false"
            default="false"
            description="Choose if the defined password needs to be randomized at first keystore access.">
        </AD>

    </OCD>
    
    <Designate pid="org.eclipse.kura.core.keystore.KeystoreServiceImpl" factoryPid="org.eclipse.kura.core.keystore.KeystoreServiceImpl">
        <Object ocdref="org.eclipse.kura.core.keystore.KeystoreServiceImpl"/>
    </Designate>
</MetaData>
