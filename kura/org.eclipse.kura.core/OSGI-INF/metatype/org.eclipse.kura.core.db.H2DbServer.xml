<MetaData xmlns="http://www.osgi.org/xmlns/metatype/v1.2.0" localization="en_us">
    <OCD id="org.eclipse.kura.core.db.H2DbServer" 
         name="H2DbServer" 
         description="H2 based database server.">

        <AD id="db.server.enabled"
            name="db.server.enabled"
            type="Boolean"
            cardinality="0" 
            required="true"
            default="false"
            description="Specifies whether the DB server is enabled or not."/>

        <AD id="db.server.type"
            name="db.server.type"
            type="String"
            cardinality="0" 
            required="true"
            default="TCP"
            description="Specifies the server type, see http://www.h2database.com/javadoc/org/h2/tools/Server.html for more details.">
            <Option label="WEB" value="WEB" />
            <Option label="TCP" value="TCP" />
            <Option label="PG" value="PG" />
        </AD>

        <AD id="db.server.commandline"
            name="db.server.commandline"
            type="String"
            cardinality="0" 
            required="true"
            default="-tcpPort 9123 -tcpAllowOthers -ifExists"
            description="Specifies the parameters for the server, see http://www.h2database.com/javadoc/org/h2/tools/Server.html for more details. The listening port must be manually openend in the Firewall configuration section in order to allow external connections."/>
        
    </OCD>
    <Designate pid="org.eclipse.kura.core.db.H2DbServer" factoryPid="org.eclipse.kura.core.db.H2DbServer">
        <Object ocdref="org.eclipse.kura.core.db.H2DbServer"/>
    </Designate>
</MetaData>
