<MetaData xmlns="http://www.osgi.org/xmlns/metatype/v1.2.0" localization="en_us">
    <OCD id="org.eclipse.kura.driver.ble.xdk" 
         name="XDKDriver" 
         description="BLE XDK Driver">

        <AD id="iname"
            name="iname"
            type="String"
            cardinality="0"
            required="true"
            default="hci0"
            description="Name of bluetooth adapter."/>
            
        <AD id="enableRotationQuaternion"
            name="enableRotationQuaternion"
            type="Boolean"
            cardinality="0"
            required="true"
            default="flase"
            description="Enable Rotation-Quaternion or Disable the Accelerometer and Gyroscope"/>
        
        <AD id="configureSampleRateHz"
            name="configureSampleRateHz"
            type="Integer"
            cardinality="0"
            required="true"
            default="10"
            min = "1"
            max = "50"
            description="Configure Sample Rate."/>     
        
    </OCD>
    
    <Designate pid="org.eclipse.kura.driver.ble.xdk"     
factoryPid="org.eclipse.kura.driver.ble.xdk">
        <Object ocdref="org.eclipse.kura.driver.ble.xdk"/>
    </Designate>
</MetaData>
