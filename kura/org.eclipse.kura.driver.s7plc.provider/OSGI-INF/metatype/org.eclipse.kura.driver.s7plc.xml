<MetaData xmlns="http://www.osgi.org/xmlns/metatype/v1.2.0" localization="en_us">
    <OCD id="org.eclipse.kura.driver.s7plc" 
         name="S7PlcDriver" 
         description="S7PLC Driver">

        <AD id="host.ip"
            name="host.ip"
            type="String"
            cardinality="0"
            required="true"
            default="0"
            description="S7 PLC Host IP Address">
        </AD>

        <AD id="host.port"
            name="host.port"
            type="Integer"
            cardinality="0"
            required="true"
            default="102"
            description="S7 PLC Host Port">
        </AD>
        
        <AD id="rack"
            name="rack"
            type="Integer"
            cardinality="0"
            required="true"
            default="0"
            description="S7 PLC Rack">
        </AD>
        
        <AD id="slot"
            name="slot"
            type="Integer"
            cardinality="0"
            required="true"
            default="2"
            description="S7 PLC Slot">
        </AD>

    </OCD>
    
    <Designate pid="org.eclipse.kura.driver.s7plc" factoryPid="org.eclipse.kura.driver.s7plc">
        <Object ocdref="org.eclipse.kura.driver.s7plc"/>
    </Designate>
</MetaData>
