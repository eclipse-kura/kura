<MetaData xmlns="http://www.osgi.org/xmlns/metatype/v1.2.0" localization="en_us">
    <OCD id="org.eclipse.kura.bluetooth.BluetoothService"
         name="BluetoothService" 
         description="Bluetooth Service for Eclipse Kura.">
        
        
        
        <AD id="iname"
            name="iname"
            type="String"
            cardinality="0"
            required="true"
            default="hci0"
            description="Name of bluetooth adapter."/>
        <AD id="scan_time"
            name="scan_time"
            type="Integer"
            cardinality="0"
            required="true"
            default="12"
            description="Lenght of time to scan for devices." />

    </OCD>
    <Designate pid="org.eclipse.kura.bluetooth.BluetoothService">
        <Object ocdref="org.eclipse.kura.bluetooth.BluetoothService"/>
    </Designate>
</MetaData>