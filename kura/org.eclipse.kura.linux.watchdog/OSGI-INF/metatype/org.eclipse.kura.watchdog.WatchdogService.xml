<MetaData xmlns="http://www.osgi.org/xmlns/metatype/v1.2.0" localization="OSGI-INF/l10n/WatchdogService">
    <OCD id="org.eclipse.kura.watchdog.WatchdogService"
         name="%name" 
         description="%description">
        
        <Icon resource="WatchdogService" size="32"/>
        
        <AD id="enabled"  
            name="%enable"
            type="Boolean"
            cardinality="0" 
            required="true"
            default="false" 
            description="%enableDesc"/>
        
        <AD id="pingInterval"
            name="%refreshInterval"
            type="Integer"
            cardinality="0"
            required="true"
            default="10000"
            max="60000"
            description="%refreshIntervalDesc"/>

        <AD id="watchdogDevice"
            name="%devicePath"
            type="String"
            cardinality="0"
            required="true"
            default="/dev/watchdog"
            description="%devicePathDesc"/>
            
        <AD id="rebootCauseFilePath"
            name="%rebootCauseFilePath"
            type="String"
            cardinality="0"
            required="true"
            default="/opt/eclipse/kura/data/kura-reboot-cause"
            description="%rebootCauseFilePathDesc"/>
            
    </OCD>
    <Designate pid="org.eclipse.kura.watchdog.WatchdogService">
        <Object ocdref="org.eclipse.kura.watchdog.WatchdogService"/>
    </Designate>
</MetaData>
