<MetaData xmlns="http://www.osgi.org/xmlns/metatype/v1.2.0" localization="en_us">
    <OCD id="org.eclipse.kura.watchdog.WatchdogService"
         name="WatchdogService" 
         description="The WatchdogService handles the hardware watchdog of the platform.  The parameter define the ping periodicity of the hardware watchdog to ensure it doesn't reboot.">
        
        <Icon resource="WatchdogService" size="32"/>
        
        <AD id="enabled"  
            name="Watchdog enable"
            type="Boolean"
            cardinality="0" 
            required="true"
            default="false" 
            description="The WatchdogService monitors CriticalComponentS and reboots the system if one of them hangs. Once enabled the WatchdogService starts refreshing the hardware watchdog which will reset the system if WatchdogService hangs."/>
        
        <AD id="pingInterval"
            name="Watchdog refresh interval"
            type="Integer"
            cardinality="0"
            required="true"
            default="10000"
            max="60000"
            description="Watchdog refresh interval in ms. The value can be set between 1 and 60 seconds."/>

        <AD id="watchdogDevice"
            name="Watchdog device path"
            type="String"
            cardinality="0"
            required="true"
            default="/dev/watchdog"
            description="Watchdog device path e.g. /dev/watchdog."/>
            
    </OCD>
    <Designate pid="org.eclipse.kura.watchdog.WatchdogService">
        <Object ocdref="org.eclipse.kura.watchdog.WatchdogService"/>
    </Designate>
</MetaData>
