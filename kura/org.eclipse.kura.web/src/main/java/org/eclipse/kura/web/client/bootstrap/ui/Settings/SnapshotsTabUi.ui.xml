<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui" xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:gwt="urn:import:org.gwtbootstrap3.client.ui.gwt">

	<ui:style>
	.important {
		font-weight: bold;
	}
	
	.center-panel {
		
	}
	
	.button {

	}
	</ui:style>

	<b:Container fluid="true">
		<b:Row>
			<b:Panel>
				<b:NavPills justified="true">
					<b:AnchorListItem icon="REFRESH" iconFixedWidth="true"
						addStyleNames="{style.button}" text="Refresh" ui:field="refresh" />

					<b:AnchorListItem icon="DOWNLOAD" iconFixedWidth="true"
						addStyleNames="{style.button}" text="Download" ui:field="download" />

					<b:AnchorListItem icon="MAIL_REPLY" addStyleNames="{style.button}"
						iconFixedWidth="true" text="Rollback" ui:field="rollback" />

					<b:AnchorListItem icon="MAIL_FORWARD"
						addStyleNames="{style.button}" iconFixedWidth="true" text="Upload and Apply"
						ui:field="upload" />
				</b:NavPills>
			</b:Panel>
		</b:Row>

		<b:Row>
			<b:Alert type="WARNING" ui:field="notification" />
			<gwt:DataGrid bordered="true" condensed="true" striped="true"
				hover="true" height="500px" width="100%" ui:field="snapshotsGrid" />
		</b:Row>
		<!-- Modal -->
		<b:Modal title="Upload" closable="true" fade="true" b:id="uploadModal"
			ui:field="uploadModal">
			<b:ModalBody>
				<b:Well>
					<b:Container fluid="true">
						<g:FormPanel ui:field="snapshotsForm">
							<b:FieldSet>
								<b:FormGroup>
									<b:FormLabel>File</b:FormLabel>
									<g:FileUpload ui:field="filePath"></g:FileUpload>
								</b:FormGroup>
								<b:ButtonGroup pull="RIGHT">
									<b:Button ui:field="uploadCancel">Cancel</b:Button>
									<b:Button ui:field="uploadUpload">Upload</b:Button>
								</b:ButtonGroup>

							</b:FieldSet>
						</g:FormPanel>
					</b:Container>
				</b:Well>
			</b:ModalBody>
		</b:Modal>
	</b:Container>
</ui:UiBinder> 