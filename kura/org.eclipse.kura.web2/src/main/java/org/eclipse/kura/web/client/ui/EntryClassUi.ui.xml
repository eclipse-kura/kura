<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui" xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
	
	.important { font-weight: bold; }
	.column { border: 1px solid #000000; text-align: center; }
	.image { text-align: left; height: 38px; width: 127px; vertical-align: baseline; background-repeat: no-repeat; background-size: contain; }
	.center-panel {	}
	.top-row-padding { margin-right: 30px; margin-top: 20px; margin-bottom: -10px; }
	.bottom-row-padding { margin-top: -10px; margin-bottom: -30px; }
	.outer-column {	margin-bottom: -20px; }
	.system-list { padding-left: 10px; padding-right: 0px; }
	.services-list { padding-left: 10px; padding-right: 0px; }
	.content-panel-body { padding: 1px; }
	.modal-wait {background-color: black; border: solid 1px red; }
	.red { color: red; }
	
	</ui:style>
	<b:Container fluid="true">
		<b:Column addStyleNames="{style.outer-column}" size="XS_12">

			<!-- ROW#1 - Header logo -->
			<b:Row>
				<b:Row>
					<b:Column addStyleNames="{style.top-row-padding}" size="XS_12">
						<b:Panel>
							<b:PanelHeader>
								<b:Image addStyleNames="{style.image}" ui:field="header" />
							</b:PanelHeader>
						</b:Panel>
					</b:Column>
				</b:Row>
			</b:Row>

			<!-- ROW#2 content -->
			<b:Row>
				<b:Panel>
					<b:PanelBody>
						<b:Modal title="Error" ui:field='errorPopup'>
							<b:ModalBody>
								<g:ScrollPanel styleName='customLogScrollPanel'>
	 								<g:VerticalPanel ui:field='errorLogArea' styleName='errorLogArea'/>
								</g:ScrollPanel>
							</b:ModalBody>									
						</b:Modal>
						<b:Row>
							<b:Column size="MD_2" addStyleNames="{style.center-panel}">
								<b:Row>
									<b:Column size="MD_12,XS_6" addStyleNames="{style.system-list}">
										<b:Panel>
											<b:PanelHeader>
												<b:Heading size="H3" text="System" />
											</b:PanelHeader>
											<b:PanelBody ui:field='systemPanel'>
												<b:NavPills stacked="true">
													<b:AnchorListItem text="Status" icon="EXCLAMATION"
														iconFixedWidth="true" ui:field="status" />

													<b:AnchorListItem text="Device" icon="HDD_O"
														iconFixedWidth="true" ui:field="device" />

													<b:AnchorListItem text="Network" icon="WIFI"
														iconFixedWidth="true" ui:field="network" />

													<b:AnchorListItem text="Firewall" icon="FIRE"
														iconFixedWidth="true" ui:field="firewall" />

													<b:AnchorListItem icon="CUBES"
														iconFixedWidth="true" text="Packages" ui:field="packages" />

													<b:AnchorListItem icon="GEAR"
														iconFixedWidth="true" text="Settings" ui:field="settings" />
													
													<b:AnchorListItem icon="GEAR"
														iconFixedWidth="true" text="Kura Wires" ui:field="wires"/>
												</b:NavPills>
											</b:PanelBody>
										</b:Panel>
									</b:Column>
									<b:Column size="MD_12,XS_6" addStyleNames="{style.services-list}">
										<b:Panel>
											<b:PanelHeader>
												<b:Heading size="H3" text="Services" />
											</b:PanelHeader>
											<b:PanelBody>
												<g:ScrollPanel ui:field="servicesPanel">
													<b:NavPills stacked="true" ui:field="servicesMenu" />
												</g:ScrollPanel>
											</b:PanelBody>
										</b:Panel>
									</b:Column>
								</b:Row>
							</b:Column>

							<b:Column size="MD_10">
								<b:Panel ui:field="contentPanel">
									<b:PanelHeader ui:field="contentPanelHeader">
									</b:PanelHeader>
									<b:PanelBody ui:field="contentPanelBody" addStyleNames="{style.content-panel-body}">
									</b:PanelBody>
								</b:Panel>
							</b:Column>

						</b:Row>
					</b:PanelBody>
				</b:Panel>
			</b:Row>
			<!-- ROW3 (Footer) Content -->
			<b:Row>
				<b:Column addStyleNames="{style.bottom-row-padding}" size="MD_12">
					<b:Row>
						<b:Panel>
							<b:PanelFooter>
								<b:Row>
									<b:Column size="MD_7">
										<b.html:Paragraph alignment="LEFT">
											<g:Label ui:field='footerLeft' text="Footer Left" />
										</b.html:Paragraph>
									</b:Column>
									<b:Column size="MD_2">
										<b.html:Paragraph alignment="CENTER">
											<g:Label ui:field='footerCenter' text="" addStyleNames="{style.red}"/>
										</b.html:Paragraph>
									</b:Column>
									<b:Column size="MD_3">
										<b.html:Paragraph alignment="RIGHT">
											<g:Label ui:field='footerRight' text="Footer Right" />
										</b.html:Paragraph>
									</b:Column>
								</b:Row>
							</b:PanelFooter>
						</b:Panel>
					</b:Row>
				</b:Column>
			</b:Row>
		</b:Column>
	</b:Container>
</ui:UiBinder> 