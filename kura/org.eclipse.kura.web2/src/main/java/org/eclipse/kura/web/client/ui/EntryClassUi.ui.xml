<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:b="urn:import:org.gwtbootstrap3.client.ui" xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html"
    xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:style>
    .important {
    	font-weight: bold;
    }
    
    .column {
    	border: 1px solid #000000;
    	text-align: center;
    }
    
    .image {
    	text-align: left;
    	height: 38px;
    	width: 127px;
    	vertical-align: baseline;
    	background-repeat: no-repeat;
    	background-size: contain;
    }
    
    .top-row-padding {
    	margin-right: 30px;
    	margin-top: 20px;
    	margin-bottom: -10px;
    }
    
    .bottom-row-padding {
    	margin-top: -10px;
    	margin-bottom: -30px;
    }
    
    .outer-column {
    	margin-bottom: -20px;
    }
    
    .system-list {
    	padding-left: 10px;
    	padding-right: 0px;
    }
    
    .services-list {
    	padding-left: 10px;
    	padding-right: 0px;
    }
    
    .content-panel-body {
    	padding: 1px;
    }
    
    .modal-wait {
    	background-color: black;
    	border: solid 1px red;
    }
    
    .red {
    	color: red;
    }
    
    .comp-modal-header { 
    	display: none; 
    }
    </ui:style>
    
    <b:Container fluid="true">
    	<b:Panel ui:field='sidenavOverlay' addStyleNames='sidenav-overlay'></b:Panel>
        <b:Column addStyleNames="{style.outer-column}" size="XS_12">

			<!-- ROW#1 - Header logo -->
            <b:Row addStyleNames="header-bar z-depth-1">
                <b:Row>
                    <b:Column addStyleNames="{style.top-row-padding}"
                        size="XS_12">
                        <b:Panel>
                            <b:PanelHeader addStyleNames="header-container">
                            	<b:Button ui:field="sidenavButton"
									addStyleNames="glyphicon glyphicon-menu-hamburger sidebar-button"></b:Button>
                                <b:Panel addStyleNames="{style.image} headerLogo"/>
                            </b:PanelHeader>
                        </b:Panel>
                    </b:Column>
                </b:Row>
            </b:Row>
			<b:Row addStyleNames='main-container'>
			<!-- ROW#2 content -->
			<b:Column ui:field="sidenav" size="MD_2" addStyleNames="center-panel z-depth-1 sidenav">
								<b:Row>
									<b:Column size="MD_12" addStyleNames="{style.system-list}">
										<b:Panel>
                                        <b:Panel addStyleNames="{style.image} headerLogo"/>
											<b:PanelHeader>
												<b:Heading size="H3" text="System" />
											</b:PanelHeader>
											<b:PanelBody ui:field='systemPanel'>
												<b:NavPills stacked="true">
													<b:TabListItem text="Status" icon="EXCLAMATION"
														iconFixedWidth="true" ui:field="status" />

													<b:AnchorListItem text="Device" icon="HDD_O"
														iconFixedWidth="true" ui:field="device" />

													<b:AnchorListItem text="Network" icon="WIFI"
														iconFixedWidth="true" ui:field="network" />

													<b:AnchorListItem text="Firewall" icon="FIRE"
														iconFixedWidth="true" ui:field="firewall" />

													<b:AnchorListItem icon="CLOUD"
														iconFixedWidth="true" text="Cloud Services" ui:field="cloudServices"/> 

													<b:AnchorListItem icon="CUBES"
														iconFixedWidth="true" text="Packages" ui:field="packages" />

													<b:AnchorListItem icon="GEAR"
														iconFixedWidth="true" text="Settings" ui:field="settings" />
													
													<b:AnchorListItem icon="RETWEET"
														iconFixedWidth="true" text="Wires" ui:field="wires"/>													  
												</b:NavPills>
											</b:PanelBody>
										</b:Panel>
									</b:Column>
									<b:Column size="MD_12" addStyleNames="{style.services-list}">
										<b:Panel>
											<b:PanelHeader>
												<b:Heading size="H3" text="Services" />
											</b:PanelHeader>
											<b:PanelBody>
												<b:Form type="INLINE">
													<b:FieldSet>
														<b:FormGroup addStyleNames="services-form-group">
															<b:InputGroup addStyleNames="services-input-group">
																<b:TextBox placeholder="Search"
																ui:field="textSearch" addStyleNames="services-search"/>
																<b:InputGroupButton addStyleNames="services-add">
																	<b:Tooltip title="Create a new factory component"
																		placement="TOP">
																	    <b:Button icon="PLUS" size="SMALL" dataTarget="#myModal"
																	    	dataToggle="MODAL" ui:field="factoriesButton"/>
																	</b:Tooltip>
																</b:InputGroupButton>
															</b:InputGroup>
														</b:FormGroup>
													</b:FieldSet>
												</b:Form>
												<g:ScrollPanel ui:field="servicesPanel">
													<b:NavPills stacked="true" ui:field="servicesMenu" />
												</g:ScrollPanel>
											</b:PanelBody>
										</b:Panel>
									</b:Column>
								</b:Row>
							</b:Column>
			<b:Row addStyleNames='main-content'>
				<b:Panel>
					<b:PanelBody>
						<b:Modal title="Error" ui:field='errorPopup'>
							<b:ModalBody>
								<g:ScrollPanel styleName='customLogScrollPanel'>
	 								<g:VerticalPanel ui:field='errorLogArea' styleName='errorLogArea'/>
								</g:ScrollPanel>
							</b:ModalBody>									
						</b:Modal>
						<b:Row addStyleNames='content-wrapper'>
							<b:Column size="MD_10">
								<b:Panel ui:field="contentPanel" addStyleNames="content-panel">
									<b:PanelHeader ui:field="contentPanelHeader">
									</b:PanelHeader>
									<b:PanelBody ui:field="contentPanelBody" addStyleNames="{style.content-panel-body}">
									</b:PanelBody>
								</b:Panel>
							</b:Column>

						</b:Row>
					</b:PanelBody>
				</b:Panel>
			</b:Row>
			<!-- ROW3 (Footer) Content -->
            <b:Row addStyleNames='footer'>
                <b:Column addStyleNames="{style.bottom-row-padding}"
                    size="MD_12">
                    <b:Row>
                        <b:Panel>
                            <b:PanelFooter>
                                <b:Row>
                                    <b:Column size="MD_12">
                                        <b.html:Paragraph
                                            alignment="LEFT">
                                            <g:Label ui:field='footerLeft'
                                                text="Footer Left" />
                                        </b.html:Paragraph>
                                    </b:Column>
                                </b:Row>
                                <b:Row>
                                    <b:Column size="MD_6,XS_6">
                                        <b.html:Paragraph
                                            alignment="CENTER">
                                            <g:Label ui:field='footerCenter'
                                                text="" addStyleNames="{style.red}" />
                                        </b.html:Paragraph>
                                    </b:Column>
                                    <b:Column size="MD_6,XS_6">
                                        <b.html:Paragraph
                                            alignment="RIGHT">
                                            <g:Label ui:field='footerRight'
                                                text="Footer Right" />
                                        </b.html:Paragraph>
                                    </b:Column>
                                </b:Row>
                            </b:PanelFooter>
                        </b:Panel>
                    </b:Row>
                </b:Column>
            </b:Row>
          </b:Row>
        </b:Column>
        		<b:Modal title="New Factory Component" closable="true" fade="true"
			dataBackdrop="STATIC" dataKeyboard="true" b:id="myModal">
			<b:ModalBody>
				<b:Form type="HORIZONTAL">
					<b:FieldSet>
						<b:FormGroup>
							<b:FormLabel for="formFactory" addStyleNames="col-lg-2">Factory</b:FormLabel>
							<g:FlowPanel addStyleNames="col-lg-10">
								<b:ListBox b:id="formFactory" ui:field="factoriesList" />
							</g:FlowPanel>
						</b:FormGroup>
						<b:FormGroup>
							<b:FormLabel for="formName" addStyleNames="col-lg-2">Name</b:FormLabel>
							<g:FlowPanel addStyleNames="col-lg-10">
								<b:TextBox placeholder="Please enter an user friendly name"
									allowBlank="false" autoComplete="false" b:id="formName"
									ui:field="componentName" />
							</g:FlowPanel>
						</b:FormGroup>
					</b:FieldSet>
				</b:Form>
			</b:ModalBody>
			<b:ModalFooter>
				<b:Button type="PRIMARY" dataDismiss="MODAL" ui:field="buttonNewComponent">Create</b:Button>
				<b:Button icon="REMOVE" type="PRIMARY" dataDismiss="MODAL">Cancel</b:Button>
			</b:ModalFooter>
		</b:Modal>
		<b:Modal closable="true" fade="true" dataBackdrop="STATIC"
			dataKeyboard="true" b:id="error-pid-modal" ui:field="errorModal">
			<b:ModalHeader addStyleNames="{style.comp-modal-header}">
			</b:ModalHeader>
			<b:ModalBody>
				<b:Alert type="DANGER">
					<b.html:Strong ui:field="errorAlertText" />
				</b:Alert>
			</b:ModalBody>
			<b:ModalFooter>
				<b:Button icon="REMOVE" type="PRIMARY" dataDismiss="MODAL">Cancel</b:Button>
			</b:ModalFooter>
		</b:Modal>
    </b:Container>
</ui:UiBinder> 