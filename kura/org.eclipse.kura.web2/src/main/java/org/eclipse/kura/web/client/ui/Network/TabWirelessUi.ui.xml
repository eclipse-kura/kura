<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui" xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:gwt="urn:import:org.gwtbootstrap3.client.ui.gwt">

	<ui:style>
	.important {
		font-weight: bold;
	}
	
	.center-panel {
		font-size: 11px;
		font-weight: normal;
	}
	
	.padding {
		margin-bottom: 50px;
	}
	
	.help {
		height: 300px;
	}
	</ui:style>

	<b:Container fluid="true">

		<b:Column size="MD_7" addStyleNames="{style.center-panel}">
			<b:Row>
				<g:ScrollPanel addStyleNames="{style.center-panel}">
					<b:Form ui:field="form">
						<b:FieldSet>

							<b:FormGroup ui:field="groupWireless">
								<b:FormLabel for="wireless" ui:field="labelWireless" />
								<b:HelpBlock color="red" ui:field="helpWireless"/>
								<g:FlowPanel>
									<b:ListBox b:id="wireless" ui:field="wireless" />
								</g:FlowPanel>
							</b:FormGroup>

							<b:FormGroup>
								<b:FormLabel for="ssid" ui:field="labelSsid" />
								<b:TextBox b:id="ssid" ui:field="ssid" />
								<b:Button ui:field="buttonSsid" icon="SEARCH"
									iconFixedWidth="true" />
							</b:FormGroup>

							<b:FormGroup>
								<b:FormLabel for="radio" ui:field="labelRadio" />
								<g:FlowPanel>
									<b:ListBox b:id="radio" ui:field="radio" />
								</g:FlowPanel>
							</b:FormGroup>

							<b:FormGroup>
								<b:FormLabel for="security" ui:field="labelSecurity" />
								<g:FlowPanel>
									<b:ListBox b:id="security" ui:field="security" />
								</g:FlowPanel>
							</b:FormGroup>


							<b:FormGroup ui:field="groupPassword">
								<b:FormLabel for="password" ui:field="labelPassword" />
								<b:HelpBlock color="red" ui:field="helpPassword"/>
								<b:Input type="PASSWORD" b:id="password" ui:field="password" />
								<b:Button ui:field="buttonPassword" icon="EXCHANGE"
									iconFixedWidth="true" />
							</b:FormGroup>

							<b:FormGroup ui:field="groupVerify">
								<b:FormLabel for="verify" ui:field="labelVerify" />
								<b:HelpBlock color="red" ui:field="helpVerify" />
								<b:Input type="PASSWORD" b:id="verify" ui:field="verify" />
							</b:FormGroup>

							<b:FormGroup>
								<b:FormLabel for="pairwise" ui:field="labelPairwise" />
								<g:FlowPanel>
									<b:ListBox b:id="pairwise" ui:field="pairwise" />
								</g:FlowPanel>
							</b:FormGroup>

							<b:FormGroup>
								<b:FormLabel for="group" ui:field="labelGroup" />
								<g:FlowPanel>
									<b:ListBox b:id="group" ui:field="group" />
								</g:FlowPanel>
							</b:FormGroup>

							<b:FormGroup>
								<b:FormLabel for="bgscan" ui:field="labelBgscan" />
								<g:FlowPanel>
									<b:ListBox b:id="bgscan" ui:field="bgscan" />
								</g:FlowPanel>
							</b:FormGroup>

							<b:FormGroup ui:field="groupRssi">
								<b:FormLabel for="rssi" ui:field="labelRssi" />
								<b:TextBox b:id="rssi" ui:field="rssi" />
							</b:FormGroup>

							<b:FormGroup ui:field="groupShortI">
								<b:FormLabel for="shortI" ui:field="labelShortI" />
								<b:TextBox b:id="shortI" ui:field="shortI" />
							</b:FormGroup>

							<b:FormGroup ui:field="groupLongI">
								<b:FormLabel for="longI" ui:field="labelLongI" />								
								<b:TextBox b:id="longI" ui:field="longI" />
							</b:FormGroup>

							<b:FormGroup>
								<b:FormLabel for="ping" ui:field="labelPing" />
								<g:FlowPanel>
									<b:RadioButton name="radio1" formValue="true"
										ui:field="radio1" />
									<b:RadioButton name="radio1" formValue="false"
										ui:field="radio2" />
								</g:FlowPanel>
							</b:FormGroup>

							<b:FormGroup>
								<b:FormLabel for="ignore" ui:field="labelIgnore" />
								<g:FlowPanel>
									<b:RadioButton name="radio2" formValue="true"
										ui:field="radio3" />
									<b:RadioButton name="radio2" formValue="false"
										ui:field="radio4" />
								</g:FlowPanel>
							</b:FormGroup>

							<b:FormGroup>
								<gwt:CellTable bordered="true" condensed="true"
									striped="true" hover="true" height="100%" width="100%"
									ui:field="channelGrid" />
								<b:Alert type="WARNING" ui:field="noChannels">
									<b.html:Text ui:field="noChannelsText" />
								</b:Alert>
							</b:FormGroup>

						</b:FieldSet>
					</b:Form>

				</g:ScrollPanel>
			</b:Row>
		</b:Column>

		<b:Column size="MD_5" addStyleNames="{style.center-panel}">
			<b:Column addStyleNames="{style.padding}" size="MD_12">
			</b:Column>
			<b:Column size="MD_12">
				<b:Row>
					<b:Panel>
						<b:PanelHeader ui:field="helpTitle" />
						<b:PanelBody addStyleNames="{style.help}" ui:field="helpText" />
					</b:Panel>
				</b:Row>
			</b:Column>
		</b:Column>

		<!-- WIFI Networks (SSID) Modal -->
		<b:Modal closable="true" dataKeyboard="true" ui:field="ssidModal">
			<b:ModalBody>
				<b:Panel>
					<b:PanelHeader ui:field="ssidTitle" />
					<b:PanelBody>
						<gwt:CellTable bordered="true" condensed="true"
							striped="true" hover="true" height="100%" width="100%" ui:field="ssidGrid" />
						<b:Alert type="INFO" ui:field="searching">
							<b.html:Text ui:field="searchingText" />
						</b:Alert>
						<b:Alert type="WARNING" ui:field="noSsid">
							<b.html:Text ui:field="noSsidText" />
						</b:Alert>
						<b:Alert type="DANGER" ui:field="scanFail">
							<b.html:Text ui:field="scanFailText" />
						</b:Alert>
					</b:PanelBody>
				</b:Panel>
			</b:ModalBody>
		</b:Modal>



	</b:Container>
</ui:UiBinder> 