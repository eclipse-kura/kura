<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:b="urn:import:org.gwtbootstrap3.client.ui" xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html"
    xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:gwt="urn:import:org.gwtbootstrap3.client.ui.gwt">
    <ui:style>
    .important {
    	font-weight: bold;
    }
    
    .spacing {
    	margin-top: 10px;
    	margin-left: -20px;
    }
    
    .center-panel {
    	padding: 0px;
    }
    </ui:style>

    <b:Container fluid="true" addStyleNames="settings-panel">
        <b:Row>
            <g:HTMLPanel ui:field="settingsIntro" />
        </b:Row>

        <b:Row>
            <b:Navbar>
                <b:NavbarNav>
                    <b:AnchorListItem text="Snapshots"
                        ui:field="snapshots" />
                    <b:AnchorListItem text="Application Certificate"
                        ui:field="appCert" />
                    <b:AnchorListItem text="SSL Configuration"
                        ui:field="sslConfig" />
                    <b:AnchorListItem text="Server SSL Certificate"
                        ui:field="serverCert" />
                    <b:AnchorListItem text="Device SSL Certificate"
                        ui:field="deviceCert" />
                    <b:AnchorListItem text="Security Policies"
                        ui:field="security" />
                </b:NavbarNav>
            </b:Navbar>
        </b:Row>

        <b:Row>
            <b:Well addStyleNames="{style.center-panel}"
                ui:field="content" />
        </b:Row>
    </b:Container>

</ui:UiBinder> 