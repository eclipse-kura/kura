<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
    xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html" xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:gwt="urn:import:org.gwtbootstrap3.client.ui.gwt">

    <ui:style>
    .important {
    	font-weight: bold;
    }
    
    .asset-comp-modal-header {
    	display: none;
    }
    
    .asset-comp-modal-body {
    	padding-bottom: 40px;
    }
    
    .center-panel {
    	height: 100%;
    	padding: 0px;
    	border: none;
    }
    
    .drivers-list {
    	padding-bottom: 30px;
    }
    </ui:style>

    <b:Container fluid="true">
        <b:Column size="MD12">
            <b:Row>
                <g:HTMLPanel ui:field="cloudServicesIntro" />
            </b:Row>
            <b:Row>
                <b:Panel ui:field="cloudInstancesPanel">
                </b:Panel>
                <b:Alert type="WARNING" ui:field="notification" />
            </b:Row>
            <b:Row>
                <b:Panel ui:field="cloudConfigurationsPanel">
                </b:Panel>
            </b:Row>
        </b:Column>
    </b:Container>
</ui:UiBinder> 