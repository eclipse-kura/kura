<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
    xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html" xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:gwt="urn:import:org.gwtbootstrap3.client.ui.gwt" xmlns:cv="urn:import:com.google.gwt.user.cellview.client">

    <ui:style>
    .column {
    	border: 1px solid #000000;
    	text-align: center;
    }
    
    .important {
    	font-weight: bold;
    }
    
    .center-panel {
    	height: 100%;
    	padding: 5px;
    	border: none;
    }
    
    .content-panel-body {
    	padding: 1px;
    }
    
    .top-row-padding {
    	margin-right: 30px;
    	margin-top: 20px;
    	margin-bottom: -10px;
    }
    
    .bottom-row-padding {
    	margin-top: -10px;
    	margin-bottom: -30px;
    }
    
    .outer-column {
    	margin-bottom: -20px;
    }
    
    .channel-name-validation-label {
    	color: red;
    	font-size: 0.35cm;
    	font-weight: normal;
    }
    
    .channel-name-form {
    	margin-bottom: 0;
    }
    
    .hidden {
    	display: none;
    }
    </ui:style>


    <b:Container fluid="true">
        <b:Row addStyleNames='content-wrapper'>
            <b:Column size="MD11">
                <b:Panel ui:field="configurationPanel" addStyleNames="content-panel">
                    <b:PanelBody ui:field="configurationPanelBody" addStyleNames="{style.content-panel-body}">
                        <b:Row>
                            <b:Panel addStyleNames="{style.center-panel}">
                                <b:ButtonGroup size="SMALL">
                                    <b:Button ui:field="applyConfigurationEdit" addStyleNames="fa fa-check"></b:Button>
                                    <b:Button ui:field="resetConfigurationEdit" addStyleNames="fa fa-times"></b:Button>
                                </b:ButtonGroup>
                            </b:Panel>
                        </b:Row>

                        <b:Row>
                            <b:Well>
                                <g:ScrollPanel>
                                    <b:Form ui:field="form">
                                        <b:Panel ui:field="channelPanel">
                                            <b:PanelHeader>
                                                <b:ButtonToolBar>
                                                    <b:ButtonGroup size="SMALL">
                                                        <b.html:Strong ui:field="channelTitle">Channels</b.html:Strong>
                                                    </b:ButtonGroup>
                                                    <b:ButtonGroup size="SMALL" addStyleNames="pull-right hidden">
                                                        <b:Button icon="DOWNLOAD" ui:field="btnDownload">Download Channels</b:Button>
                                                        <b:Button icon="UPLOAD" ui:field="btnUpload">Upload Channels</b:Button>
                                                    </b:ButtonGroup>
                                                    <b:ButtonGroup size="SMALL" addStyleNames="pull-right">
                                                        <b:Button icon="PLUS_SQUARE" ui:field="btnAdd">New Channel</b:Button>
                                                        <b:Button icon="MINUS_SQUARE" ui:field="btnRemove">Delete
                                                            Channel</b:Button>
                                                    </b:ButtonGroup>
                                                </b:ButtonToolBar>
                                            </b:PanelHeader>
                                            <b:PanelBody>
                                                <gwt:CellTable bordered="true" condensed="true" striped="true"
                                                    hover="true" ui:field="channelTable" />
                                            </b:PanelBody>
                                            <b:PanelFooter>
                                                <cv:SimplePager location="CENTER" ui:field="channelPager" />
                                            </b:PanelFooter>
                                        </b:Panel>
                                        <b:FieldSet ui:field="fields" />
                                    </b:Form>
                                </g:ScrollPanel>
                            </b:Well>
                        </b:Row>
                    </b:PanelBody>
                </b:Panel>
            </b:Column>
        </b:Row>
        <b:Modal closable="true" dataKeyboard="true" ui:field="incompleteFieldsModal">
            <b:ModalBody>
                <b:Panel>
                    <b:PanelBody>
                        <b:Alert type="WARNING" ui:field="incompleteFields">
                            <b.html:Text ui:field="incompleteFieldsText" />
                        </b:Alert>
                    </b:PanelBody>
                </b:Panel>
            </b:ModalBody>
        </b:Modal>
        <b:Modal closable="true" fade="true" dataBackdrop="STATIC" dataKeyboard="true" b:id="new-channel-modal"
            ui:field="newChannelModal">
            <b:ModalHeader />
            <b:ModalBody>
                <b:Form>
                    <b:FormGroup addStyleNames="{style.channel-name-form}">
                        <b:FormLabel ui:field="newChannelNameLabel" />
                        <g:FlowPanel>
                            <b:TextBox ui:field="newChannelNameInput" b:id="channelName" allowBlank="false"
                                autoComplete="false" />
                        </g:FlowPanel>
                        <b:FormLabel addStyleNames="{style.channel-name-validation-label}" ui:field="newChannelNameError" />
                    </b:FormGroup>
                </b:Form>
            </b:ModalBody>
            <b:ModalFooter>
                <b:Button b:id="btn-create-channel-cancel" icon="REMOVE" type="PRIMARY" dataDismiss="MODAL"
                    ui:field="btnCancelCreatingNewChannel" />
                <b:Button icon="SAVE" type="PRIMARY" b:id="btn-create-channel" ui:field="btnCreateNewChannel" />
            </b:ModalFooter>
        </b:Modal>

    </b:Container>
</ui:UiBinder> 