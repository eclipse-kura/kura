<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
    xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html" xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:gwt="urn:import:org.gwtbootstrap3.client.ui.gwt" xmlns:cv="urn:import:com.google.gwt.user.cellview.client">

    <ui:style>
    .center-panel {
    	height: 100%;
    	padding-top: 20px;
    	padding-left: 5px;
    	border: none;
    }
    
    .channel-name-validation-label {
    	color: red;
    	font-size: 0.35cm;
    	font-weight: normal;
    }
    
    .channel-name-form {
    	margin-bottom: 0;
    }
    </ui:style>

    <b:Container fluid="true">
        <b:Column size="MD_12">
            <b:Row>
                <b:Well addStyleNames="{style.center-panel}">
                    <g:ScrollPanel>
                        <b:Form ui:field="form">
                            <b:Panel ui:field="channelPanel">
                                <b:PanelHeader>
                                    <b:ButtonToolBar>
                                        <b:ButtonGroup size="SMALL">
                                            <b.html:Strong ui:field="channelTitle">Channels</b.html:Strong>
                                        </b:ButtonGroup>
                                        <b:ButtonGroup size="SMALL" addStyleNames="pull-right">
                                            <b:Button icon="DOWNLOAD" ui:field="btnDownload">Download Channels</b:Button>
                                            <b:Button icon="UPLOAD" ui:field="btnUpload">Upload Channels</b:Button>
                                        </b:ButtonGroup>
                                        <b:ButtonGroup size="SMALL" addStyleNames="pull-right">
                                            <b:Button icon="PLUS_SQUARE" ui:field="btnAdd">New Channel</b:Button>
                                            <b:Button icon="MINUS_SQUARE" ui:field="btnRemove">Delete
                                                Channel</b:Button>
                                        </b:ButtonGroup>
                                    </b:ButtonToolBar>
                                </b:PanelHeader>
                                <b:PanelBody b:id="channelTable">
                                    <gwt:CellTable bordered="true" condensed="true" striped="true" hover="true"
                                        ui:field="channelTable" />
                                </b:PanelBody>
                                <b:PanelFooter>
                                    <cv:SimplePager location="CENTER" ui:field="channelPager" />
                                </b:PanelFooter>
                            </b:Panel>
                            <b:FieldSet ui:field="fields" />
                        </b:Form>
                    </g:ScrollPanel>
                </b:Well>
            </b:Row>
            <b:Modal closable="true" fade="true" dataBackdrop="STATIC" dataKeyboard="true" b:id="new-channel-modal"
                ui:field="newChannelModal">
                <b:ModalHeader />
                <b:ModalBody>
                    <b:Form>
                        <b:FormGroup addStyleNames="{style.channel-name-form}">
                            <b:FormLabel ui:field="newChannelNameLabel" />
                            <g:FlowPanel>
                                <b:TextBox ui:field="newChannelNameInput" b:id="channelName" allowBlank="false"
                                    autoComplete="false" />
                            </g:FlowPanel>
                            <b:FormLabel addStyleNames="{style.channel-name-validation-label}" ui:field="newChannelNameError" />
                        </b:FormGroup>
                    </b:Form>
                </b:ModalBody>
                <b:ModalFooter>
                    <b:Button b:id="btn-create-channel-cancel" icon="REMOVE" type="PRIMARY" dataDismiss="MODAL"
                        ui:field="btnCancelCreatingNewChannel" />
                    <b:Button icon="SAVE" type="PRIMARY" b:id="btn-create-channel" ui:field="btnCreateNewChannel" />
                </b:ModalFooter>
            </b:Modal>
            <!-- File Upload Modal -->
            <b:Modal closable="true" fade="true" title="Upload" b:id="upload-modal" 
            	ui:field="uploadModal">
                <b:ModalBody>
                        <b:Container fluid="true">
                            <g:FormPanel ui:field="uploadForm">
                                <b:FieldSet>
                                    <b:FormGroup>
                                        <b:FormLabel>File</b:FormLabel>
                                        <g:FileUpload ui:field="filePath"></g:FileUpload>
                                        <b:CheckBox ui:field="appendCheck">Replace current channels.</b:CheckBox>
                                        <b:HelpBlock>If checked channels will be replaced by the imported ones. They will be appended to the list, otherwise.</b:HelpBlock>
                                    </b:FormGroup>
                                    <b:ButtonGroup pull="RIGHT">
                                        <b:Button ui:field="uploadCancel">Cancel</b:Button>
                                        <b:Button ui:field="uploadUpload">Upload</b:Button>
                                    </b:ButtonGroup>
                                    <g:Hidden ui:field="xsrfTokenField"></g:Hidden>
                                    <g:Hidden ui:field="assetPidField"></g:Hidden>
                                    <g:Hidden ui:field="driverPidField"></g:Hidden>
                                    <g:Hidden ui:field="appendCheckField"></g:Hidden>
                                </b:FieldSet>
                            </g:FormPanel>
                        </b:Container>
                </b:ModalBody>
            </b:Modal>
        </b:Column>
    </b:Container>
</ui:UiBinder> 