<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:b="urn:import:org.gwtbootstrap3.client.ui" xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html"
    xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:gwt="urn:import:org.gwtbootstrap3.client.ui.gwt">

    <ui:style>
    .important {
    	font-weight: bold;
    }
    
    .center-panel {
    	padding: 0px;
    }
    
    .interfaces-panel {
    	padding-left: 0px;
    }
    </ui:style>

    <b:Container fluid="true" addStyleNames="network-panel">
        <b:Row>
            <g:HTMLPanel ui:field="networkIntro">
            </g:HTMLPanel>
        </b:Row>
        <b:Row>
            <b:Column size="MD_2" addStyleNames="{style.interfaces-panel}">
                    <b:Panel ui:field="interfacesTable"/>
            </b:Column>

            <b:Column size="MD_9" addStyleNames="{style.center-panel}">
                <b:Well addStyleNames="{style.center-panel}">
                    <b:Container fluid="true" ui:field="buttonBar" />
                    <b:Panel>
                        <b:PanelBody ui:field="tabsPanel">
                        </b:PanelBody>
                    </b:Panel>
                </b:Well>
            </b:Column>
        </b:Row>

    </b:Container>
</ui:UiBinder> 