<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:b="urn:import:org.gwtbootstrap3.client.ui" xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html"
    xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:gwt="urn:import:org.gwtbootstrap3.client.ui.gwt"
    xmlns:util="urn:import:org.eclipse.kura.web.client.util">

    <ui:style>
    .important {
    	font-weight: bold;
    }
    
    .center-panel {
    	font-size: 12px;
    	font-weight: normal;
    }
    
    .padding {
    	margin-bottom: 50px;
    }
    
    .help {
    	height: 300px;
    }
    
    .help-header {
    	font-size: 14px;
    }
    
    .help-body {
    	width: 275px;
    }
    </ui:style>

    <b:Container fluid="true">

        <b:Column size="MD_7" addStyleNames="{style.center-panel}">
            <b:Row>
                <g:ScrollPanel addStyleNames="{style.center-panel}">
                    <b:Form ui:field="form">
                        <b:FieldSet>

                            <b:FormGroup ui:field="groupRouter">
                                <b:FormLabel for="router"
                                    ui:field="labelRouter" />
                                <util:HelpButton
                                    ui:field="routerHelp" />
                                <g:FlowPanel>
                                    <b:HelpBlock ui:field="helpRouter" />
                                    <b:ListBox b:id="router"
                                        ui:field="router" />
                                </g:FlowPanel>
                            </b:FormGroup>

                            <b:FormGroup ui:field="groupBegin">
                                <b:FormLabel for="begin"
                                    ui:field="labelBegin" />
                                <util:HelpButton
                                    ui:field="beginHelp" />
                                <b:TextBox b:id="begin"
                                    ui:field="begin" />
                            </b:FormGroup>

                            <b:FormGroup ui:field="groupEnd">
                                <b:FormLabel for="end"
                                    ui:field="labelEnd" />
                                <util:HelpButton
                                    ui:field="endHelp" />
                                <b:TextBox b:id="end"
                                    ui:field="end" />
                            </b:FormGroup>

                            <b:FormGroup ui:field="groupSubnet">
                                <b:FormLabel for="subnet"
                                    ui:field="labelSubnet" />
                                <util:HelpButton
                                    ui:field="subnetHelp" />
                                <b:TextBox b:id="subnet"
                                    ui:field="subnet" />
                            </b:FormGroup>

                            <b:FormGroup ui:field="groupDefaultL">
                                <b:FormLabel for="defaultL"
                                    ui:field="labelDefaultL" />
                                <util:HelpButton
                                    ui:field="defaultLHelp" />
                                <b:TextBox b:id="defaultL"
                                    ui:field="defaultL" />
                            </b:FormGroup>

                            <b:FormGroup ui:field="groupMax">
                                <b:FormLabel for="max"
                                    ui:field="labelMax" />
                                <util:HelpButton
                                    ui:field="maxHelp" />
                                <b:TextBox b:id="max"
                                    ui:field="max" />
                            </b:FormGroup>

                            <b:FormGroup>
                                <b:FormLabel for="pass"
                                    ui:field="labelPass" />
                                <util:HelpButton
                                    ui:field="passHelp" />
                                <g:FlowPanel>
                                    <b:InlineRadio name="radio1"
                                        formValue="true" ui:field="radio1" />
                                    <b:InlineRadio name="radio1"
                                        formValue="false" ui:field="radio2" />
                                </g:FlowPanel>
                            </b:FormGroup>
                        </b:FieldSet>
                    </b:Form>

                </g:ScrollPanel>
            </b:Row>
        </b:Column>

        <b:Column size="MD_5" addStyleNames="{style.center-panel}" visibleOn="MD_LG">
            <b:Column size="MD_12">
                <b:Row addStyleNames="affix" b:id="help">
                    <b:Panel>
                        <b:PanelHeader addStyleNames="{style.help-header}" ui:field="helpTitle" />
                        <b:PanelBody addStyleNames="{style.help-body}">
                            <g:ScrollPanel addStyleNames="{style.help}" ui:field="helpText" />
                        </b:PanelBody>
                    </b:Panel>
                </b:Row>
            </b:Column>
        </b:Column>
    </b:Container>
</ui:UiBinder> 