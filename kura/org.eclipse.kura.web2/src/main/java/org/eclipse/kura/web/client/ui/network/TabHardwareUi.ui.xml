<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:b="urn:import:org.gwtbootstrap3.client.ui" xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html"
    xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:gwt="urn:import:org.gwtbootstrap3.client.ui.gwt">

    <ui:style>
    .important {
    	font-weight: bold;
    }
    
    .center-panel {
    	font-size: 12px;
    	font-weight: normal;
    }
    </ui:style>

    <g:ScrollPanel addStyleNames="{style.center-panel}">
        <b:Container fluid="true">
            <b:Column size="MD_7">
                <b:Row addStyleNames="{style.center-panel}">
                    <b:Form>
                        <b:FieldSet>
                            <b:FormGroup>
                                <b:FormLabel for="state"
                                    ui:field="labelState" />
                                <b:FormControlStatic
                                    b:id="state" ui:field="state" />
                            </b:FormGroup>

                            <b:FormGroup>
                                <b:FormLabel for="state"
                                    ui:field="labelName" />
                                <b:FormControlStatic
                                    b:id="state" ui:field="name" />
                            </b:FormGroup>

                            <b:FormGroup>
                                <b:FormLabel for="state"
                                    ui:field="labelType" />
                                <b:FormControlStatic
                                    b:id="state" ui:field="type" />
                            </b:FormGroup>

                            <b:FormGroup>
                                <b:FormLabel for="state"
                                    ui:field="labelHardware" />
                                <b:FormControlStatic
                                    b:id="state" ui:field="hardware" />
                            </b:FormGroup>

                            <b:FormGroup>
                                <b:FormLabel for="state"
                                    ui:field="labelSerial" />
                                <b:FormControlStatic
                                    b:id="state" ui:field="serial" />
                            </b:FormGroup>

                            <b:FormGroup>
                                <b:FormLabel for="state"
                                    ui:field="labelDriver" />
                                <b:FormControlStatic
                                    b:id="state" ui:field="driver" />
                            </b:FormGroup>

                            <b:FormGroup>
                                <b:FormLabel for="state"
                                    ui:field="labelVersion" />
                                <b:FormControlStatic
                                    b:id="state" ui:field="version" />
                            </b:FormGroup>

                            <b:FormGroup>
                                <b:FormLabel for="state"
                                    ui:field="labelFirmware" />
                                <b:FormControlStatic
                                    b:id="state" ui:field="firmware" />
                            </b:FormGroup>

                            <b:FormGroup>
                                <b:FormLabel for="state"
                                    ui:field="labelMtu" />
                                <b:FormControlStatic
                                    b:id="state" ui:field="mtu" />
                            </b:FormGroup>

                            <b:FormGroup>
                                <b:FormLabel for="state"
                                    ui:field="labelUsb" />
                                <b:FormControlStatic
                                    b:id="state" ui:field="usb" />
                            </b:FormGroup>

                            <b:FormGroup>
                                <b:FormLabel for="state"
                                    ui:field="labelRssi" />
                                <b:FormControlStatic
                                    b:id="state" ui:field="rssi" />
                            </b:FormGroup>
                        </b:FieldSet>
                    </b:Form>
                </b:Row>
            </b:Column>
        </b:Container>
    </g:ScrollPanel>
</ui:UiBinder> 