<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:b="urn:import:org.gwtbootstrap3.client.ui" xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html"
    xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:gwt="urn:import:org.gwtbootstrap3.client.ui.gwt"
    xmlns:kura="urn:import:org.eclipse.kura.web.client.ui"> 

    <ui:style>
    .important {
    	font-weight: bold;
    }
    
    .center-panel {
    	height: 100%;
    }
    
    .small-text {
    	font-size: 0.90em;
    }
    </ui:style>

    <ui:with field="msgs"
		type="org.eclipse.kura.web.client.messages.Messages" />

    <b:Container fluid="true">
        <b:Column size="MD_12">
            <b:Row>
                <g:HTMLPanel>
                   <b.html:Paragraph text="{msgs.securityTamperDetectionDescription}"></b.html:Paragraph>
                </g:HTMLPanel>
                <b:Form>
                        <b:FieldSet>
                            <b:FormGroup>
                                <b:FormLabel for="state" text="{msgs.securityTamperDetectionTamperState}" />
                                <b:FormControlStatic
                                    b:id="state" ui:field="state" />
                            </b:FormGroup>

                            <b:FormGroup ui:field="timestampGroup">
                                <b:FormLabel for="timestamp" text="{msgs.securityTamperDetectionTamperTimestamp}"/>
                                <b:FormControlStatic
                                    b:id="timestamp" ui:field="timestamp" />
                            </b:FormGroup>
                            
                            <b:FormGroup>
                            	<b:Button text="{msgs.securityTamperDetectionReset}" ui:field="resetButton" />
                        	</b:FormGroup>
                        </b:FieldSet>
                    </b:Form>
            </b:Row>
            <kura:AlertDialog ui:field="alertDialog" />
        </b:Column>
    </b:Container>

</ui:UiBinder> 