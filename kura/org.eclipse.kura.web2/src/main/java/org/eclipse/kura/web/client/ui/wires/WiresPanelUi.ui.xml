<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui" xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:gwt="urn:import:org.gwtbootstrap3.client.ui.gwt">

	<ui:style>
	.wire-components-list {
		padding-left: 10px;
		padding-right: 0px;
	}
	
	.asset-comp-modal-header {
		display: none;
	}
	
	.asset-comp-modal-body {
		padding-bottom: 40px;
	}
	
	.drivers-list {
		padding-bottom: 30px;
	}
	</ui:style>

	<b:Container fluid="true">
		<b:Column size="MD_10">
			<b:Row>
				<b:Panel>
					<b:ButtonGroup size="SMALL">
						<b:Button icon="SAVE" b:id="btn-config-save">Save</b:Button>
					</b:ButtonGroup>
					<b:ButtonGroup size="SMALL" addStyleNames="pull-right">
						<b:Button icon="TRASH" b:id="btn-config-delete" ui:field="btnDelete">Delete</b:Button>
					</b:ButtonGroup>
				</b:Panel>
			</b:Row>
			<b:Row>
				<b:Column size="MD_12" b:id="wires-graph"></b:Column>
			</b:Row>
		</b:Column>
		<b:Column size="MD_2">
			<b:Row>
				<b:Column size="MD_12,XS_6" addStyleNames="{style.wire-components-list}">
					<b:Panel>
						<b:PanelHeader>
							<b:Heading size="H3" text="Logical Blocks" />
						</b:PanelHeader>
						<b:PanelBody>
							<g:ScrollPanel>
								<b:NavPills stacked="true" ui:field="wireComponentsMenu" />
							</g:ScrollPanel>
						</b:PanelBody>
					</b:Panel>
				</b:Column>
			</b:Row>
		</b:Column>
		<b:Modal closable="true" fade="true" dataBackdrop="STATIC"
			dataKeyboard="true" b:id="asset-comp-modal" ui:field="assetModal">
			<b:ModalHeader addStyleNames="{style.asset-comp-modal-header}">
			</b:ModalHeader>
			<b:ModalBody addStyleNames="{style.asset-comp-modal-body}">
				<b:Form>
					<b:FormGroup ui:field="driverInstanceForm"
						addStyleNames="{style.drivers-list}">
						<b:FormLabel for="driverPid" addStyleNames="col-md-4">Available
							Drivers</b:FormLabel>
						<g:FlowPanel addStyleNames="col-md-8">
							<b:ListBox ui:field="driverPids" b:id="driverPids">
							</b:ListBox>
						</g:FlowPanel>
					</b:FormGroup>
					<b:FormGroup>
						<b:FormLabel for="componentName" addStyleNames="col-md-4">Logical Block Name</b:FormLabel>
						<g:FlowPanel addStyleNames="col-md-8">
							<b:TextBox ui:field="componentName" b:id="componentName" placeholder="Please enter an user-friendly name"
								allowBlank="false" autoComplete="false"></b:TextBox>
						</g:FlowPanel>
					</b:FormGroup>
					<b:TextBox ui:field="factoryPid" b:id="factoryPid"></b:TextBox>
				</b:Form>
			</b:ModalBody>
			<b:ModalFooter>
				<b:Button icon="SAVE" type="PRIMARY" b:id="btn-create-comp"
					ui:field="btnCreateComp">Create</b:Button>
				<b:Button icon="TRASH" type="PRIMARY" dataDismiss="MODAL">Cancel</b:Button>
			</b:ModalFooter>
		</b:Modal>
	</b:Container>
</ui:UiBinder> 
