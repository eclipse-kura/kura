<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

    <g:HTMLPanel ui:field="helpPanel" addStyleNames="overlay-help-panel z-depth-2">
        <g:HTMLPanel addStyleNames="help-panel">
            <g:HTMLPanel addStyleNames="help-header">
                <g:Label addStyleNames="help-panel-title">Help</g:Label>
                <b:Button ui:field="hideButton" addStyleNames="hide-button fa fa-times">Hide</b:Button>
            </g:HTMLPanel>
            <g:HTMLPanel ui:field="helpContent"
                addStyleNames="help-content" />
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder> 