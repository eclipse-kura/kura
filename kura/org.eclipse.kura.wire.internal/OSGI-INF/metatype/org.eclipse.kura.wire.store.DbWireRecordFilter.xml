<MetaData xmlns="http://www.osgi.org/xmlns/metatype/v1.2.0" localization="en_us">
    <OCD id="org.eclipse.kura.wire.store.DbWireRecordFilter"
         name="DbWireRecordFilter" 
         description="DbWireRecordFilter provides filtering and aggregation for WireRecords stored by the DbWireRecordStores.">

        <Icon resource="DbWireRecordFilter" size="32"/>
        
        <AD id="sql.view"
        	name="sql.view"
        	type="String"
        	cardinality="0"
        	required="true"
        	default="SELECT AVG(DATA) AS AVG_DOUBLE FROM (SELECT DOUBLE_DATA AS DATA FROM DRIVER_EXAMPLE ORDER BY TIMESTAMP DESC LIMIT 10);"
        	description="SQL to be executed to build a view.">
        </AD>
        
        <AD id="refresh.rate"
        	name="refresh.rate"
        	type="Integer"
        	cardinality="0"
        	required="true"
        	default="30"
        	description="Refresh rate, in seconds">
        </AD>
        
    </OCD>
    
    <Designate pid="org.eclipse.kura.wire.store.DbWireRecordFilter" factoryPid="org.eclipse.kura.wire.store.DbWireRecordFilter">
        <Object ocdref="org.eclipse.kura.wire.store.DbWireRecordFilter"/>
    </Designate>
</MetaData>
