                            <autoStart>true</autoStart>
                        </bundle>
                        <bundle>
                            <id>org.eclipse.osgi.util</id>
                            <level>4</level>
                            <autoStart>true</autoStart>
                        </bundle>
                        <bundle>
                            <id>org.hamcrest.core</id>
