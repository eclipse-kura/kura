                                    <groupId>org.eclipse.milo</groupId>
                                    <artifactId>stack-core</artifactId>
                                    <version>${org.eclipse.milo.version}</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.eclipse.milo</groupId>
                                    <artifactId>stack-server</artifactId>
                                    <version>${org.eclipse.milo.version}</version>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-clean-plugin</artifactId>
                <version>3.1.0</version>
                <configuration>
