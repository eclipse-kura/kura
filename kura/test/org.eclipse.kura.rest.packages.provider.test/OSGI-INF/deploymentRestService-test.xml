<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0" name="DeploymentRestServiceTest">
   <implementation class="org.eclipse.kura.rest.deployment.agent.test.DeploymentRestServiceIntegrationTest"/>
   <reference name="ConfigurationService"
              policy="static"
              cardinality="1..1"
              bind="bindCfgSvc"
              unbind="unbindCfgSvc"
              interface="org.eclipse.kura.configuration.ConfigurationService"/>
   <reference name="DeploymentAgentService"
              policy="static"
              cardinality="1..1"
              bind="bindDeploymentAgent"
              unbind="unbindDeploymentAgent"
              interface="org.eclipse.kura.deployment.agent.DeploymentAgentService"/>
   <reference name="RestService"
              policy="static"
              cardinality="1..1"
              bind="bindRestService"
              unbind="unbindRestService"
              target="(service.pid=org.eclipse.kura.internal.rest.provider.RestService)"
              interface="org.eclipse.kura.configuration.ConfigurableComponent"/>
   <reference bind="bindDeploymentAgentRestSvc"
              unbind="unbindDeploymentAgentRestSvc"
              cardinality="0..1"
              interface="org.eclipse.kura.internal.rest.deployment.agent.DeploymentRestService"
              name="DeploymentAgentRestService"
              target="(kura.service.pid=org.eclipse.kura.rest.deployment.agent.DeploymentRestService)"
              policy="dynamic"/>
</scr:component>
