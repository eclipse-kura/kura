<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
    xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.eclipse.kura</groupId>
        <artifactId>target-platform</artifactId>
        <version>6.0.0-SNAPSHOT</version>
    </parent>

    <artifactId>p2-repo-equinox</artifactId>
    <packaging>pom</packaging>

    <properties>
        <equinox.download.url>https://www.eclipse.org/downloads/download.php?file&#61;/equinox/drops/R-4.33-202409030240/equinox-SDK-4.33.zip&#38;mirror_id&#61;1</equinox.download.url>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>properties-maven-plugin</artifactId>
                <version>${properties-maven-plugin.version}</version>
                <executions>
                    <execution>
                        <phase>initialize</phase>
                        <goals>
                            <goal>read-project-properties</goal>
                        </goals>
                        <configuration>
                            <files>
                                <file>${basedir}/../config/kura.target-platform.build.properties</file>
                            </files>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>${maven-dependency-plugin.version}</version>
                <executions>
                    <execution>
                        <id>copy-bundles-for-publishing</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>org.apache.felix</groupId>
                                    <artifactId>org.apache.felix.dependencymanager</artifactId>
                                    <version>${org.apache.felix.dependencymanager.version}</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.apache.felix</groupId>
                                    <artifactId>org.apache.felix.deploymentadmin</artifactId>
                                    <version>${org.apache.felix.deploymentadmin.version}</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.knowhowlab.osgi</groupId>
                                    <artifactId>monitoradmin</artifactId>
                                    <version>${org.knowhowlab.osgi.monitoradmin.version}</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.eclipse.jetty.ee8</groupId>
                                    <artifactId>jetty-ee8-security</artifactId>
                                    <version>${org.eclipse.jetty.ee8.jetty-ee8-security.version}</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.eclipse.jetty.ee8</groupId>
                                    <artifactId>jetty-ee8-servlet</artifactId>
                                    <version>${org.eclipse.jetty.ee8.jetty-ee8-servlet.version}</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.eclipse.jetty.ee8</groupId>
                                    <artifactId>jetty-ee8-nested</artifactId>
                                    <version>${org.eclipse.jetty.ee8.jetty-ee8-nested.version}</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.eclipse.platform</groupId>
                                    <artifactId>org.eclipse.equinox.http.service.api</artifactId>
                                    <version>${org.eclipse.equinox.http.service.api.version}</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.eclipse.platform</groupId>
                                    <artifactId>org.eclipse.equinox.io</artifactId>
                                    <version>${org.eclipse.equinox.io.version}</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.eclipse.platform</groupId>
                                    <artifactId>org.eclipse.equinox.util</artifactId>
                                    <version>${org.eclipse.equinox.util.version}</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.eclipse.platform</groupId>
                                    <artifactId>org.eclipse.equinox.wireadmin</artifactId>
                                    <version>${org.eclipse.equinox.wireadmin.version}</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.osgi</groupId>
                                    <artifactId>org.osgi.service.http.whiteboard</artifactId>
                                    <version>${org.osgi.service.http.whiteboard.version}</version>
                                </artifactItem>
                            </artifactItems>
                            <stripVersion>true</stripVersion>
                            <outputDirectory>${project.basedir}/target/source/plugins</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.eclipse.tycho.extras</groupId>
                <artifactId>tycho-p2-extras-plugin</artifactId>
                <version>${tycho-p2-extras-plugin.version}</version>
                <executions>
                    <execution>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>publish-features-and-bundles</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <compress>false</compress>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>${maven-antrun-plugin.version}</version>
                <executions>
                    <execution>
                        <id>download-equinox</id>
                        <phase>process-sources</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <target>
                                <mkdir dir="${project.build.directory}/download" />
                                <!--
                                    - direct mirror link: http://www.eclipse.org/downloads/download.php?file=/equinox/drops/R-Neon.1-201609071200/equinox-SDK-Neon.1.zip&amp;r=1
                                -->
                                <get src="${equinox.download.url}" dest="${project.build.directory}/download/equinox.zip" usetimestamp="true" />

                                <delete dir="${project.build.directory}/source/plugins" />
                                <mkdir dir="${project.build.directory}/source/plugins" />
                                <unzip src="${project.build.directory}/download/equinox.zip" dest="${project.build.directory}/source/plugins">
                                    <patternset>
                                        <exclude name="plugins/org.eclipse.osgi.compatibility.state*.jar" />
                                        <exclude name="plugins/org.eclipse.equinox.*servletbridge*.jar" />
                                        <exclude name="plugins/org.eclipse.equinox.p2*.jar" />
                                        <exclude name="plugins/org.eclipse.equinox.security*.jar" />
                                        <exclude name="plugins/org.eclipse.equinox.console.ssh*.jar" />
                                        <exclude name="plugins/org.eclipse.equinox.simpleconfig*.jar" />
                                        <exclude name="plugins/org.eclipse.equinox.http.servletbridge*.jar" />

                                        <include name="plugins/org.eclipse.equinox.launcher_*.jar" />
                                        <include name="plugins/org.eclipse.equinox.launcher.source_*.jar" />
                                        <exclude name="plugins/org.eclipse.equinox.launcher.*.jar" />

                                        <include name="plugins/org.apache.felix.scr*.jar" />

                                        <include name="plugins/org.eclipse.core*.jar" />
                                        <include name="plugins/org.eclipse.equinox*.jar" />
                                        <include name="plugins/org.eclipse.osgi*.jar" />
                                        <include name="plugins/org.osgi.*.jar" />

                                        <include name="plugins/org.apache.felix*.jar" />

                                    </patternset>
                                    <mapper type="flatten" />
                                </unzip>
                            </target>
                        </configuration>
                    </execution>
                    <execution>
                        <id>rename-maven-deps</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <target>
                                <move file="${project.build.directory}/source/plugins/org.apache.felix.dependencymanager.jar"
                                    tofile="${project.build.directory}/source/plugins/org.apache.felix.dependencymanager_${org.apache.felix.dependencymanager.version}.jar" />
                                <move file="${project.build.directory}/source/plugins/org.apache.felix.deploymentadmin.jar"
                                    tofile="${project.build.directory}/source/plugins/org.apache.felix.deploymentadmin_${org.apache.felix.deploymentadmin.version}.jar" />
                                <move file="${project.build.directory}/source/plugins/monitoradmin.jar"
                                    tofile="${project.build.directory}/source/plugins/org.knowhowlab.osgi.monitoradmin_${org.knowhowlab.osgi.monitoradmin.version}.jar" />
                                    tofile="${project.build.directory}/source/plugins/org.eclipse.jetty.session_${org.eclipse.jetty.session.version}.jar" />
                                <move file="${project.build.directory}/source/plugins/jetty-ee8-security.jar" 
                                    tofile="${project.build.directory}/source/plugins/org.eclipse.jetty.ee8.jetty-ee8-security_${org.eclipse.jetty.ee8.jetty-ee8-security.version}.jar" />                                    
                                <move file="${project.build.directory}/source/plugins/jetty-ee8-servlet.jar"
                                    tofile="${project.build.directory}/source/plugins/org.eclipse.jetty.ee8.jetty-ee8-servlet_${org.eclipse.jetty.ee8.jetty-ee8-servlet.version}.jar" />
                                <move file="${project.build.directory}/source/plugins/jetty-ee8-nested.jar"
                                    tofile="${project.build.directory}/source/plugins/org.eclipse.jetty.ee8.jetty-ee8-nested_${org.eclipse.jetty.ee8.jetty-ee8-nested.version}.jar" />
                                <move file="${project.build.directory}/source/plugins/org.eclipse.equinox.io.jar"
                                    tofile="${project.build.directory}/source/plugins/org.eclipse.equinox.io_${org.eclipse.equinox.io.version}.jar" />
                                <move file="${project.build.directory}/source/plugins/org.eclipse.equinox.util.jar"
                                    tofile="${project.build.directory}/source/plugins/org.eclipse.equinox.util_${org.eclipse.equinox.util.version}.jar" />
                                <move file="${project.build.directory}/source/plugins/org.eclipse.equinox.http.service.api.jar"
                                    tofile="${project.build.directory}/source/plugins/org.eclipse.equinox.http.service.api_${org.eclipse.equinox.http.service.api.version}.jar" />
                                <move file="${project.build.directory}/source/plugins/org.eclipse.equinox.wireadmin.jar"
                                    tofile="${project.build.directory}/source/plugins/org.eclipse.equinox.wireadmin_${org.eclipse.equinox.wireadmin.version}.jar" />
                                <move file="${project.build.directory}/source/plugins/org.osgi.service.http.whiteboard.jar"
                                    tofile="${project.build.directory}/source/plugins/org.osgi.service.http.whiteboard_${org.osgi.service.http.whiteboard.version}.jar" />
                            </target>
                        </configuration>
                    </execution>
                    <execution>
                        <id>install-equinox</id>
                        <phase>install</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <target>
                                <delete dir="../../kura/target-definition/equinox/" />
                                <mkdir dir="../../kura/target-definition/equinox/repository" />
                                <copy todir="../../kura/target-definition/equinox/repository">
                                    <fileset dir="${project.build.directory}/repository" />
                                </copy>
                            </target>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-deploy-plugin</artifactId>
                <version>${maven-deploy-plugin.version}</version>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <!-- profile for falling back to non-mirror download links -->
            <id>no-mirror</id>
            <properties>
                <equinox.download.url>https://archive.eclipse.org/equinox/drops/R-4.33-202409030240/equinox-SDK-4.33.zip</equinox.download.url>
            </properties>
        </profile>
    </profiles>
</project>
