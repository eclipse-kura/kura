						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>
								<delete dir="../../kura/target-definition/equinox_3.8.1/" />
								<mkdir dir="../../kura/target-definition/equinox_3.8.1/repository" />
